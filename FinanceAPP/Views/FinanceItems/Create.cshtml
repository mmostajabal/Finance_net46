@using FinanceShared
@model FinancialItemsDTO
@{
    ViewData["Title"] = "Create";
}

@using (@Html.BeginForm("Create", "FinanceItems", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.PARTNER_ID, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.PARTNER_ID, new SelectList(ViewBag.PartnerList, "Value", "Text"), new { @class = "form-control mb-3" })
        @Html.ValidationMessageFor(model => model.PARTNER_ID, "", new { @class = "text-danger" })
    </div>

    <div>
        @Html.LabelFor(m => m.Amount, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control mb-3 input-responsive" })
        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
    </div>

    <div>
        @Html.LabelFor(m => m.Date, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Date, new { @type = "date", @max = DateTime.Today.ToString("yyyy-MM-dd"), @class = "form-control mb-3 input-responsive" })
        @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
    </div>
    <div class="form-group bg-secondary p-2 rounded">
        <button type="submit" value="Save" class="btn btn-primary p-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                <path d="M11 2H9v3h2z" />
                <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z" />
            </svg> Save
        </button>

        <a href="@Url.Action("FinancialItem", "FinanceItems")" class="btn btn-secondary p-2"><i class="bi bi-arrow-return-left"></i> Return</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
